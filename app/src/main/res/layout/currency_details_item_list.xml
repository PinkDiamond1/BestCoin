<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPaddingBottom="@dimen/dimension_8dp"
    app:contentPaddingLeft="@dimen/dimension_8dp"
    app:contentPaddingRight="@dimen/dimension_8dp"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="4dp"
    android:layout_margin="@dimen/dimension_8dp" >

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingStart="32dp"
    android:paddingEnd="32dp"
    tools:context="com.mobilemovement.bestcoin.view.currencylist.CurrencyDetailsHolderFragment"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_currency_detail_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/CurrenyDetailTextViewLabelStyle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_currency_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/CurrenyDetailTextViewStyle" />

    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>
</layout>